# Server
PORT=3001
NODE_ENV=production

# CORS - Comma separated list of allowed origins, or * for all
ALLOWED_ORIGINS=*

# Database (PostgreSQL) - Optional, for history features
# You can get a free PostgreSQL from Render, Supabase, or Neon
DATABASE_URL=postgresql://user:password@host:5432/database

# Claude AI (Anthropic) - Required for post generation
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
